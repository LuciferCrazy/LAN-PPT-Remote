<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPT 遥控器"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电脑 IP (如 192.168.43.100)"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:text="192.168."
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_lock"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="锁定 IP"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_black_mode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="进入演示模式 (伪锁屏)"
            android:backgroundTint="#333333"
            android:textColor="#FF9800"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明：进入演示模式后屏幕全黑\n双击屏幕任意位置退出"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view_fake_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:text="演示中...\n双击退出"
        android:gravity="center"
        android:textColor="#111111"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2026 Designed by Lucifer | Github"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:alpha="0.3"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"/>

</FrameLayout>